{
  "name": "blindtest-webapp",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "dev:all": "concurrently -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"npm run dev\" \"npm run dev:server\"",
    "start": "npm run dev:all",
    "build": "tsc --noEmit --skipLibCheck || true && vite build",
    "preview": "vite preview",
    "test": "node --test server/**/*.test.mjs",
    "test:watch": "node --test --watch server/**/*.test.mjs",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "lint": "eslint src --max-warnings 999",
    "lint:fix": "eslint src --fix --max-warnings 999",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "motion": "^12.34.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.69.0",
    "react-router-dom": "^7.11.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "sonner": "^2.0.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/ui": "^1.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.8.1",
    "typescript": "~5.7.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^6.0.0",
    "vitest": "^1.0.0",
    "@eslint-react/eslint-plugin": "^2.12.0"
  },
  "engines": {
    "node": ">=20"
  }
}